<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <include
        layout="@layout/branch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </include>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="让我们花10分钟了解你"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以便发现您最需要的装修内容"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择性别："/>


        <RadioGroup
            android:id="@id/guide_sex_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <RadioButton
                android:id="@id/guide_sex_check_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Order_StateCheckBox"
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:text="男"/>
            <RadioButton
                android:id="@id/guide_sex_check_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Order_StateCheckBox"
                android:padding="10dp"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择生日："/>
        <DatePicker
            android:id="@id/guide_datepiker"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></DatePicker>
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white">
        <TextView
            android:id="@id/guide_fitmenting_text"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修阶段:"/>
        <RadioGroup
            android:id="@id/guide_plan_fitment_radioGroup"
            android:layout_toRightOf="@id/guide_fitmenting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@id/guide_fitmenting_radioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="正在装修"
                style="@style/Order_StateCheckBox"/>
            <RadioButton
                android:id="@id/guide_planfitment_radioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="计划装修"
                style="@style/Order_StateCheckBox"/>
            <RadioButton
                android:id="@id/guide_is_living_radioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="已经入住"
                style="@style/Order_StateCheckBox"/>
            <RadioButton
                android:id="@id/guide_noplan_radioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="暂无计划"
                style="@style/Order_StateCheckBox"/>

        </RadioGroup>
        <LinearLayout
            android:layout_toRightOf="@id/guide_plan_fitment_radioGroup"
            android:layout_marginTop="42dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@id/guide_plan_fitment_thisyear"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今年"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@id/guide_plan_fitment_nextyear"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="明年"/>
            <TextView
                android:id="@id/guide_plan_fitment_nextnextyear"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="后年"/>
        </LinearLayout>

    </RelativeLayout>


    <Button
        android:id="@id/guide_enter_fitment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进入一起装修吧"
        android:textColor="@color/light_gray"
        android:background="@color/light_green"
        android:layout_gravity="bottom"/>
</LinearLayout>