<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_item_live_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/site_live_item_state_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/darker_green"
            android:padding="5dp"
            android:text="已完成"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/site_live_item_state_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/site_live_item_statement_textView"
            android:layout_below="@+id/site_live_item_state_textView"
            android:layout_marginTop="6dp"
            android:src="@mipmap/finish_icon" />

        <TextView
            android:id="@+id/site_live_item_statement_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/site_live_item_state_img"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:text="开工" />

        <View
            android:id="@+id/site_live_item_divide"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/site_live_item_state_img"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="18dp"
            android:background="@color/light_gray" />

    </RelativeLayout>
</LinearLayout>